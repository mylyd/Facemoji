<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/system_bg</item>
    </style>

    <style name="center_dialog_anim_style">
        <item name="android:windowEnterAnimation">@anim/alpha_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--设置TabLayout字体大小-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--drawer layout item-->
    <style name="textDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textColor">#111213</item>
    </style>

    <style name="action_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#202022</item>
    </style>

    <!--feedback text style-->
    <style name="feedback_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#626469</item>
    </style>
</resources>
